---
import MainLayout from '@layouts/MainLayout.astro'
import PageWrap from '@layouts/PageWrap.astro'
import UploadForm from '@components/Upload/UploadForm.tsx'
---

<MainLayout title="Tower Lakes 100">
    <PageWrap bg="bg-floral-white" width="extra-wide" title="Home">
        <article class="prose extra-wide">
            <header class="page-header mt-6 prose">
                <h1 class="font-bold text-3xl lg:text-4xl">Tower Lakes 100</h1>

                <p class="prose">
                    Welcome to the Tower Lakes 100 website. This site will be
                    updated with more information about the TL100 Yearbook
                    Project so please check back regularly.
                </p>
                <p class="prose">
                    Please submit any photos that you have of Tower Lakes
                    events, recreation, history, etc. The more community members
                    pictured, the better! Please bear in mind that we cannot
                    guarantee that your photos/family can be included, though we
                    hope to represent all of our neighbors. If you are
                    interested in guaranteeing that your family is pictured,
                    consider buying a family ad spot!
                </p>

                <h2 class="!mt-0">Purchase a Tower Lakes 100 Yearbook!</h2>

                <div class="my-6">
                    <a
                        href="https://www.lakesidewoodworking.net/member-site-homepage-1"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="bg-primary text-white px-4 py-2 rounded-lg hover:bg-primary/50 active:hover:bg-primary/50 no-underline"
                    >
                        Purchase Yearbook
                    </a>
                </div>

                <UploadForm client:only="react" />
            </header>
        </article>
    </PageWrap>
</MainLayout>
